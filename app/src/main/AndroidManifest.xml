<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.danielkobylski.android.marketmajster">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BarterApp"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
        android:usesCleartextTraffic="true">

        <!-- android:theme="@style/Theme.AppCompat.Light.DarkActionBar" -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SearchActivity" />
        <activity
            android:name=".CategoryChoiceActivity"
            android:label="Wybierz kategorię"
            android:noHistory="true" />
        <activity
            android:name=".LocalisationChoiceActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CityChoiceActivity"
            android:label="Wybierz miasto" />
        <activity
            android:name=".ProductActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TransactionProposalActivity"
            android:label="Propozycja wymiany"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".UserProductsActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegistrationActivity" />
        <activity
            android:name=".AccountConfigActivity"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:label="Ustawienia konta" />
        <activity
            android:name=".PasswordChangeActivity"
            android:label="Zmiana hasła" />
        <activity android:name=".NewOffertActivity"
            android:label="Nowa oferta"></activity>
    </application>

</manifest>